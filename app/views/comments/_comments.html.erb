<%= render 'comments/form', comment: @comment, target_model: taget_model %>
<% if comments.present? %>
  <ol>
    <% comments.each do |comment| %>
      <li>
        <%= comment.body %>
        <%= comment.user.name %>
        <%= comment.created_at.strftime("%Y/%m/%d %H:%M") %>
      </li>
    <% end %>
  </ol>
<% else %>
  <p><%= t('activerecord.errors.messages.not_exist', model: t('activerecord.models.comment'))  %></p>
<% end %>
