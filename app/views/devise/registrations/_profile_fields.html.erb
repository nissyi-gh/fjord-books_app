<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<div class="field">
  <%= f.label :postal_code %>
  <%= f.text_field :postal_code %>
</div>

<div class="field">
  <%= f.label :address %>
  <%= f.text_field :address %>
</div>

<div class="field">
  <%= f.label :self_introduction %>
  <%= f.text_area :self_introduction %>
</div>

<div class="field">
  <%= f.label :avatar %>
  <% if f.object.avatar.attached? %>
    <%= image_tag f.object.avatar %>
    <p>画像を設定中です</p>
  <% end  %>
  <%= f.file_field :avatar, accept: 'image/png,image/gif,image/jpeg' %>
</div>
